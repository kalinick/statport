{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/spfront/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/spfront/css/cupertino/jquery-ui-1.10.4.custom.min.css') }}">
{% endblock %}

{% block body %}
    <div id="wrapper">
    {% block header %}
        <div class="header">
            <div class="white-container-left">
                <div class="white-container-right">
                    <div id="header-content">
                        <div id="logo">
                            <a href="{{ path('index_page') }}"><img src="{{ asset('bundles/spfront/images/sport-statport.png') }}" alt="Sport-Statport.com"></a>
                        </div>
                        <div class="menu">
                            <div class="menu-item bold" style="width: 110px;"><a href="{{ path('sample_page') }}" class="blue">Reports template</a></div>
                            <div class="divisor divisor-menu"></div>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <div class="menu-item bold" style="width: 69px;"><a href="{{ path('reports_swimmers') }}" class="blue">Reports</a></div>
                                <div class="divisor divisor-menu"></div>
                            {% endif %}
                            <div class="menu-item bold" style="width: 69px;">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                            {% else %}
                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            </div>
                            <div class="divisor divisor-menu"></div>
                            <div class="menu-item bold" style="width: 69px;">
                                <a href="{{ url('fos_user_registration_register') }}">Sign Up</a>
                            {% endif %}
                            </div>

                            {#<div class="divisor divisor-menu"></div>#}
                            {#<div class="menu-item" style="width: 76px;"><a href="http://symfony.sport-statport.com/profile/" class="blue">My account</a></div>#}
                            {#<div class="divisor divisor-menu"></div>#}
                            {#<div class="menu-item" style="width: 53px;"><a href="http://symfony.sport-statport.com/logout" class="blue">Log out</a></div>#}
                        </div>
                        <div id="login-popup"></div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    <div class="content">
    {% block content %}
    {% endblock %}
    </div>

    {% block footer %}
        <div class="global-width" id="footer">

            <div id="footer-content">
                <div class="footer-left">
                    <div class="email">Email: <a style="float:right" href="mailto:info@sport-statport.com">info@sport-statport.com</a></div>
                    <div class="divisor divisor-footer"></div>
                    Call us directly at <b>480-249-8520</b>
                </div>
                <div class="footer-right">
                    <a href="{{ path('privacy_page') }}">Privacy</a>
                    <div class="divisor divisor-footer"></div>
                    <a href="{{ path('terms_page') }}">Terms of service</a>
                    <div class="divisor divisor-footer"></div>
                    <a href="{{ path('legal_page') }}">Legal notices</a>
                    <div class="divisor divisor-footer"></div>
                    <a href="{{ path('about_page') }}">About</a>
                    <div class="divisor divisor-footer"></div>
                    <a href="{{ path('contact_page') }}">Contact us</a>
                </div>
            </div>
            <div id="footer2-content">
                <div class="footer-left">
                    <span style="display:block; margin-top:5px;">&copy; 2012 Statport Group LLC</span>
                </div>
                <div class="footer-right">
                    <span style="float:left; display:block; margin-right: 25px; margin-top:5px;">Share this page:</span>
                    <span class='st_facebook_hcount' displayText='Facebook'></span>
                    <span class='st_twitter_hcount' displayText='Tweet'></span>
                    <span class='st_email_hcount' displayText='Email'></span>
                    <span class='st_googleplus_hcount' displayText='Google +'></span>
                </div>
            </div>
        </div>
    {% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>

    <script type="text/javascript" src="{{ asset('bundles/spfront/js/jquery-1.10.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/spfront/js/jquery-ui-1.10.4.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/spfront/js/main.js') }}"></script>
{% endblock %}